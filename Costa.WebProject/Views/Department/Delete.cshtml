@model Costa.Application.Departments.Queries.GetDepartmentDetails.DepartmentDetailsVm
﻿
@{
    ViewData["Title"] = "Удаление карточки";
}

<h3>Вы действительно хотите удалить выбранный отдел?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название отдела:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">Код отдела:</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>

        <dt class="col-sm-2">Родительское подразделение:</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentDepartmentName)
        </dd>        
    </dl>

    <form asp-action="Delete" method="post" asp-route-ID="@Model.ID">
        <div class="form-group">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            <a asp-action="Index">Вернуться к структуре предприятия</a>
        </div>
    </form>
</div>
